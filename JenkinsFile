pipeline {
    agent { dockerContainer { image 'ecotracer/front' } }
    environment {
        REPO_URL = "https://github.com/Fredericsonn/sirius-front.git"
        REMOTE_USER = "eco"
        REMOTE_HOST = "172.31.253.53"
        REMOTE_PATH = "/home/eco/app"
    }
    stages {
        stage('Cloning the repository') {
            steps {
                git branch : "master", url: "${env.REPO_URL}"
            }
        }
        stage("Build") {
            steps {
                script {    
                    sh '''
                        npm install
                        npm run build
                    '''
                }
            }
        }
        stage("Archive artifact") {
            steps {
                archiveArtifacts artifacts : "build/*", allowEmptyArchive: false
            }
        }
        stage("Deploy to the front server") {
            steps {
                sshagent(['frontend']) { 
                    sh """
                        scp -o StrictHostKeyChecking=no -r build/ "${env.REMOTE_USER}"@"${env.REMOTE_HOST}":/home/eco/app
                        ssh -o StrictHostKeyChecking=no "${env.REMOTE_USER}"@"${env.REMOTE_HOST}" 'source /home/eco/.nvm/nvm.sh && nvm use 20 && cd ${env.REMOTE_PATH} && screen -d -m serve -s ./build'
                        """
                }
                
            }
        }

    }
    post {
        success {
            echo 'Deployment completed successfully!'
        }
        failure {
            echo 'Deployment failed. Please check the logs.'
        }
    }
}
